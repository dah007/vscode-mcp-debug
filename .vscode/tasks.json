{
    "version": "2.0.0",
    "tasks": [
        {
        "label": "Start MCP Server",
        "type": "shell",
        "command": "cd ${workspaceFolder}/server && source venv/bin/activate && python3 -m uvicorn main:app --host 127.0.0.1 --port 8001",
        "isBackground": true,
        "problemMatcher": {
            "pattern": {
            "regexp": "^.*$",
            "file": 1,
            "location": 2,
            "message": 3
            },
            "background": {
            "activeOnStart": true,
            "beginsPattern": "^.*Started server process.*$",
            "endsPattern": "^.*Uvicorn running on.*$"
            }
        },
        "presentation": {
            "reveal": "always",
            "panel": "new",
            "group": "server"
        }
        },
        {
        "label": "Stop MCP Server",
        "type": "shell",
        "command": "pkill -f 'uvicorn main:app'",
        "presentation": {
            "reveal": "never"
        }
        }
    ]
}
